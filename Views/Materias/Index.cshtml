@model IEnumerable<ColegioSanJose.Models.Materia>

@{
    ViewData["Title"] = "Materias";
}

<h1>Materias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Materia</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre de Materia</th>
            <th>Docente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreMateria)</td>
                <td>@Html.DisplayFor(modelItem => item.Docente)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MateriaId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.MateriaId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.MateriaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>