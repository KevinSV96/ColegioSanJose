@model ColegioSanJose.Models.Materia

@{
    ViewData["Title"] = "Crear Materia";
}

<h1>Crear Materia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NombreMateria" class="control-label"></label>
                <input asp-for="NombreMateria" class="form-control" />
                <span asp-validation-for="NombreMateria" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Docente" class="control-label"></label>
                <input asp-for="Docente" class="form-control" />
                <span asp-validation-for="Docente" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>