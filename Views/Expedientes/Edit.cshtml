@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Editar Expediente";
}

<h1>Editar Expediente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpedienteId" />
            <div class="form-group mb-3">
                <label asp-for="AlumnoId" class="control-label">Alumno</label>
                <select asp-for="AlumnoId" class="form-control" asp-items="ViewBag.AlumnoId">
                    <option value="">-- Seleccionar Alumno --</option>
                </select>
                <span asp-validation-for="AlumnoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MateriaId" class="control-label">Materia</label>
                <select asp-for="MateriaId" class="form-control" asp-items="ViewBag.MateriaId">
                    <option value="">-- Seleccionar Materia --</option>
                </select>
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NotaFinal" class="control-label"></label>
                <input asp-for="NotaFinal" class="form-control" type="number" step="0.1" min="0" max="10" />
                <span asp-validation-for="NotaFinal" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label"></label>
                <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>