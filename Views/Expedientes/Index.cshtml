@model IEnumerable<ColegioSanJose.Models.Expediente>

@{
    ViewData["Title"] = "Expedientes";
}

<h1>Expedientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Expediente</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Alumno</th>
            <th>Materia</th>
            <th>Nota Final</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Alumno.NombreCompleto)</td>
                <td>@Html.DisplayFor(modelItem => item.Materia.NombreMateria)</td>
                <td>
                    <span class="badge @(item.NotaFinal >= 7 ? "bg-success" : item.NotaFinal >= 5 ? "bg-warning" : "bg-danger")">
                        @Html.DisplayFor(modelItem => item.NotaFinal)
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Observaciones)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExpedienteId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ExpedienteId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ExpedienteId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>