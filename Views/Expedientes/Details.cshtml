@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Detalles del Expediente";
}

<h1>Detalles del Expediente</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Alumno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.NombreMateria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFinal)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.NotaFinal >= 7 ? "bg-success" : Model.NotaFinal >= 5 ? "bg-warning" : "bg-danger")">
                @Html.DisplayFor(model => model.NotaFinal)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ExpedienteId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>