@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Eliminar Expediente";
}

<h1>Eliminar Expediente</h1>

<h3>¿Estás seguro que quieres eliminar este expediente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Alumno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.NombreMateria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFinal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotaFinal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ExpedienteId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>