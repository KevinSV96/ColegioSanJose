@model IEnumerable<ColegioSanJose.Controllers.PromedioAlumnoViewModel>

@{
    ViewData["Title"] = "Promedios de Alumnos";
}

<h1>Promedios de Alumnos</h1>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Alumno</th>
            <th>Grado</th>
            <th>Promedio de Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                <td>@Html.DisplayFor(modelItem => item.Grado)</td>
                <td>
                    <span class="badge @(item.PromedioNotas >= 7 ? "bg-success" : item.PromedioNotas >= 5 ? "bg-warning" : "bg-danger") fs-6">
                        @item.PromedioNotas.ToString("0.0")
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>